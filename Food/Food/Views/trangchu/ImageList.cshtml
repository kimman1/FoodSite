@model IEnumerable<Image>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ImageList</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/fontawesome.css" />
    <link rel="stylesheet" href="~/Content/fontawesome-all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.7/dist/jquery.fancybox.min.css" />
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/fontawesome/fontawesome.js"></script>
    <script src="~/Scripts/fontawesome/fontawesome.min.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.7/dist/jquery.fancybox.min.js"></script>

</head>
<body>
    <div class="container text-center">
        <p>Tên món ăn: @ViewData["FoodName"]</p>
        <p>Địa chỉ: @ViewData["FoodAddress"]</p>
        <p>Thành Phố: @ViewData["FoodCity"]</p>
        <hr class="my-5" />
        @foreach (var item in Model)
        {
            <a href="~/Image/@Html.DisplayFor(modelItem => item.ImageName)" data-fancybox="images" data-caption="Backpackers following a dirt trail">
                <img src="~/Image/@item.FoodID/@item.ImageName" style="width:250px; height:250px;" />
            </a>
        }
    </div>
</body>
</html>
