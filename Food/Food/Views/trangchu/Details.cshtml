@model IEnumerable<FoodCategory>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FoodCategoryName)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FoodCategoryName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.FoodCategoryID }) |
                @Html.ActionLink("Details", "FoodCategoryDetails", new { id=item.FoodCategoryID, CityID = ViewBag.CityID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.FoodCategoryID })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
