@model  Food

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/fontawesome.css" />
    <link rel="stylesheet" href="~/Content/fontawesome-all.min.css" />
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/jquery-3.5.1.slim.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/fontawesome/fontawesome.js"></script>
    <script src="~/Scripts/fontawesome/fontawesome.min.js"></script>
</head>
<body>
    <div class="container text-center">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal" style="text-align: -webkit-center;">
                <h4>Food</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.FoodName, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-5 offset-0">
                        @Html.EditorFor(model => model.FoodName, new { htmlAttributes = new { @class = "form-control text-center" } })
                        @Html.ValidationMessageFor(model => model.FoodName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-5 offset-0">
                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control text-center" } })
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CityID, "Thành Phố", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-5 offset-0">
                        @Html.DropDownList("CityID", (IEnumerable<SelectListItem>)ViewBag.SelectListCity, htmlAttributes: new { @class = "form-control text-center" })
                        @Html.ValidationMessageFor(model => model.CityID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.FoodCategoryID, "Loại", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-5 offset-0">
                        @Html.DropDownList("FoodCategoryID", (IEnumerable<SelectListItem>)ViewBag.SelectListFoodCateName, htmlAttributes: new { @class = "form-control text-center" })
                        @Html.ValidationMessageFor(model => model.FoodCategoryID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-success"><i class="fa fa-floppy-o"></i> Tạo Món Ăn</button>
                        <button type="button" class="btn btn-primary"><i class="fa fa-undo"></i>  @Html.ActionLink("Back to List", "Index",null, new { @style = "color:white;"})</button>
                    </div>
                </div>
            </div>
        }

    </div>
</body>
</html>
