@model IEnumerable<FoodCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link rel="stylesheet" href="~/Content/fontawesome.css" />
    <link rel="stylesheet" href="~/Content/fontawesome-all.min.css" />
    <script src="~/Scripts/fontawesome/fontawesome.js"></script>
    <script src="~/Scripts/fontawesome/fontawesome.min.js"></script>
</head>
<body>
    <div class="container text-center">
        <h2>Food Category</h2>
        <button type="button" class="btn btn-dark"><i class="fa fa-plus" ></i> @Html.ActionLink("Create New", "Create", null, new { @style = "color:white;" })</button>
        <table class="table table-dark " style="margin-top:1%;">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FoodCategoryName)
                </th>
                <th>
                   Options
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FoodCategoryName)
                    </td>
                    <td>
                        <button type="button" class="btn btn-success"> @Html.ActionLink("Edit", "Edit", new { id = item.FoodCategoryID }, new { @style = "color:white;"})</button>
                        <button type="button" class="btn btn-primary"> @Html.ActionLink("Details", "Details", new { id = item.FoodCategoryID }, new { @style = "color:white;" })</button>
                        <button type="button" class="btn btn-danger">@Html.ActionLink("Delete", "Delete", new { id = item.FoodCategoryID }, new { @style = "color:white;" })</button> 
                    </td>
                </tr>
            }

        </table>
    </div>
</body>
</html>

