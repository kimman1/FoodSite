@model IEnumerable<Areas.admin.ViewModels.FoodViewModel>


@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

    <title>Index</title>
    <meta name="viewport" content="width=device-width">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/fontawesome.css" />
    <link rel="stylesheet" href="~/Content/fontawesome-all.min.css" />
  
    <script src="~/Scripts/jquery-3.5.1.slim.min.js"></script>
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/fontawesome/fontawesome.js"></script>
    <script src="~/Scripts/fontawesome/fontawesome.min.js"></script>


</head>
<body>
    <div class="container text-center">
        <button class="btn btn-dark"><i class="fa fa-plus-circle"></i> @Html.ActionLink("Create New", "Create",null, new { @style = "color:white;"})</button>
        <div class="table-responsive">
            <table class="table table-dark table-hover" style="margin-top:20px;">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FoodID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FoodName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CityName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FoodCateName)
                    </th>
                    <th></th>
                </tr>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FoodID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FoodName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CityName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FoodCateName)
                            </td>
                            <td>
                                <button class="btn btn-primary">@Html.ActionLink("Edit", "Edit", new { id = item.FoodID }, new { @style = "color:white;" })</button> |
                                <button class="btn btn-success"> @Html.ActionLink("Details", "Details", new { id = item.FoodID }, new { @style = "color:white;" })</button> |
                                <button class="btn btn-danger"> @Html.ActionLink("Delete", "Delete", new { id = item.FoodID }, new { @style = "color:white;" })</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
